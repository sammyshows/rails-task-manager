<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
<h3><%= @task.completed %></h3>
<%= link_to 'Edit task', task_edit_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to 'All tasks', tasks_path %>
